
{
  "train": {
    "data_file": "GraphCodeBert/data/cpp_functions.jsonl",
    "output_dir": "BERTModels/GraphCodeBert/graphcodebert-cpp-mlm-from-config",
    "batch_size": 16,
    "epochs": 8,
    "learning_rate": 2e-5,
    "max_length": 512,
    "warmup_steps": 500,
    "mlm_probability": 0.15,
    "validation_split": 0.15
  },
  "evaluate": {
    "model_path": "GraphCodeBert/graphcodebert-cpp-mlm-from-config/best_model",
    "mask_ratio": 0.2,
    "top_k": 5,
    "use_database_snippets": true,
    "training_data_size": 10000,
    "num_database_snippets": 1000
  },
  "mlm_eval": {
    "model_path": "GraphCodeBert/graphcodebert-cpp-mlm-from-config/best_model",
    "device": null,
    "mask_ratio": 0.2,
    "top_k": 5,
    "methods": {
      "random_mask": {
        "enabled": false,
        "mask_ratio": 0.5
      },
      "sequential_mask": {
        "enabled": true
      },
      "specific_token_mask": {
        "enabled": false,
        "tokens": ["int", "void", "return", "result"]
      }
    }
  },

  "codesearch": {
    "processed_data_file": "GraphCodeBert/data/code_docstring_dataset.jsonl",
    "encoded_corpus_file": "GraphCodeBert/data/encoded_corpus_cpp.jsonl",
    "mlm_model_path": "GraphCodeBert/graphcodebert-cpp-mlm-from-config/best_model",
    "output_dir": "GraphCodeBert/CodeSearch/CodeSearch/graphcodebert-cpp-codesearch-model",
    "num_samples": 10000,
    "batch_size": 16,
    "epochs": 3,
    "learning_rate": 2e-5,
    "max_code_len": 256,
    "max_query_len": 128
  }
}